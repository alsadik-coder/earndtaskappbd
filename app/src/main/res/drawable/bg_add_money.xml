<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fill: Blue 10% -->
    <solid android:color="#1A1A73E8"/>

    <!-- Stroke: Gray 100% -->
    <stroke
        android:width="1dp"
        android:color="#E5E7EB"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Padding inside button -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp"/>

</shape>
