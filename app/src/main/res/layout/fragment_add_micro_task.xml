<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/bg_dialog_rounded">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Micro Task"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Close -->
    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_close"
        android:contentDescription="Close dialog"
        app:tint="@color/text_secondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Task Name -->
    <TextView
        android:id="@+id/tvTaskNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Name"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etTaskName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter task name"
        android:background="@drawable/bg_input_field"
        android:padding="12dp"
        android:inputType="text"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_hint"
        android:importantForAutofill="no"
        app:layout_constraintTop_toBottomOf="@id/tvTaskNameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="LabelFor"/>

    <!-- Reward -->
    <TextView
        android:id="@+id/tvRewardLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reward Amount (à§³)"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etTaskName"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etReward"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="e.g. 10"
        android:inputType="number"
        android:background="@drawable/bg_input_field"
        android:padding="12dp"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_hint"
        android:importantForAutofill="no"
        app:layout_constraintTop_toBottomOf="@id/tvRewardLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="LabelFor"/>

    <!-- Description -->
    <TextView
        android:id="@+id/tvDescLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Description"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etReward"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:hint="Describe what user needs to do"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:background="@drawable/bg_input_field"
        android:padding="12dp"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_hint"
        android:importantForAutofill="no"
        app:layout_constraintTop_toBottomOf="@id/tvDescLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="LabelFor"/>

    <!-- Requirement -->
    <TextView
        android:id="@+id/tvRequirementLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proof Requirement"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etDescription"
        app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
        android:id="@+id/spRequirement"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:background="@drawable/bg_input_field"
        android:contentDescription="Select proof requirement"
        app:layout_constraintTop_toBottomOf="@id/tvRequirementLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Submit -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddTask"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:text="Add Task"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/bg_button_primary"
        app:layout_constraintTop_toBottomOf="@id/spRequirement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>