<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background">
    <!--  Header Section  -->

    <View
        android:id="@+id/header_bg"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/header_gradient"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="0dp"
        android:layout_height="00dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_white" />

    <FrameLayout
        android:id="@+id/notification_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_back">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_popup_reminder"
            app:tint="@color/text_white" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="top|end"
            android:background="@android:color/holo_red_light" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_tasks_title"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Tasks"
        android:textColor="@color/text_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back" />

    <TextView
        android:id="@+id/tv_tasks_subtitle"
        style="@style/SubtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete tasks and earn rewards"
        android:textColor="@color/text_white"
        app:layout_constraintStart_toStartOf="@id/tv_tasks_title"
        app:layout_constraintTop_toBottomOf="@id/tv_tasks_title" />
    <!--  Daily Check-in Card  -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_daily_checkin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"

        app:cardCornerRadius="@dimen/card_corner_radius"
        app:layout_constraintTop_toBottomOf="@id/tv_tasks_subtitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/daily_checkin_gradient"
            android:padding="@dimen/card_padding">

            <ImageView
                android:id="@+id/iv_checkin_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
            android:src="@drawable/ic_shopping_bag"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/text_white" />

            <TextView
                android:id="@+id/tv_checkin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Daily Check-in"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/iv_checkin_icon"
                app:layout_constraintTop_toTopOf="@id/iv_checkin_icon" />

            <TextView
                android:id="@+id/tv_checkin_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+50 Taka"
                android:textColor="@color/text_white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/tv_checkin_title"
                app:layout_constraintTop_toBottomOf="@id/tv_checkin_title" />

            <Button
                android:id="@+id/btn_claim"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:backgroundTint="@color/text_white"
                android:text="Claim"
                android:textAllCaps="false"
                android:textColor="@color/daily_checkin_end"
                android:textSize="12sp"
                app:cornerRadius="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <!--  Scrollable Content  -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_daily_checkin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <!--  Tabs  -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tab_selected_bg"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp"
                        android:text="All"
                        android:textColor="@color/text_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/tab_unselected_bg"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp"
                        android:text="Social"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/tab_unselected_bg"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp"
                        android:text="Watch Ads"
                        android:textColor="@color/text_secondary" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/tab_unselected_bg"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp"
                        android:text="Survey"
                        android:textColor="@color/text_secondary" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/tab_unselected_bg"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp"
                        android:text="App Install"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>
            </HorizontalScrollView>
            <!--  Featured Task  -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="@dimen/card_corner_radius">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/featured_gradient"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/iv_featured_star"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_feature_item"
                        android:padding="8dp"
                        android:src="@android:drawable/btn_star_big_on"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_pill"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:text="+500 ৳"
                        android:textColor="#9333EA"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_featured_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Featured Task"
                        android:textColor="@color/text_white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_featured_star" />

                    <TextView
                        android:id="@+id/tv_featured_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Complete survey and earn big rewards instantly"
                        android:textColor="@color/text_white"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/tv_featured_title" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/text_white"
                        android:text="Start Now"
                        android:textAllCaps="false"
                        android:textColor="@color/featured_start"
                        app:cornerRadius="24dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_featured_desc" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <!--  Task List  -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="All Tasks"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />
            <!--  Task Item 1  -->
            <androidx.cardview.widget.CardView
                style="@style/CardStyle"
                android:layout_marginTop="12dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/iv_task1_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_share"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_task1_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Like Facebook Page"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/tv_task1_reward"
                        app:layout_constraintStart_toEndOf="@id/iv_task1_icon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Follow and like our page"
                        android:textColor="@color/text_secondary"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toStartOf="@id/tv_task1_reward"
                        app:layout_constraintStart_toStartOf="@id/tv_task1_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_task1_title" />

                    <TextView
                        android:id="@+id/tv_task1_reward"
                        style="@style/RewardText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/green_pill_bg"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="+30 ৳"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <!--  Task Item 2  -->
            <androidx.cardview.widget.CardView style="@style/CardStyle">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/iv_task2_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_slideshow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_task2_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Watch Video Ad"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/tv_task2_reward"
                        app:layout_constraintStart_toEndOf="@id/iv_task2_icon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Watch 30 sec video"
                        android:textColor="@color/text_secondary"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toStartOf="@id/tv_task2_reward"
                        app:layout_constraintStart_toStartOf="@id/tv_task2_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_task2_title" />

                    <TextView
                        android:id="@+id/tv_task2_reward"
                        style="@style/RewardText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/green_pill_bg"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="+15 ৳"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>