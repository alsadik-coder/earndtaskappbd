<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
    </style>
    <style name="TitleText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SubtitleText">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
    </style>
    <style name="RewardText">
        <item name="android:textColor">@color/text_reward</item>
        <item name="android:textSize">@dimen/text_size_reward</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Chip Styles -->
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipCornerRadius">@dimen/corner_radius_small</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius_small</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Toolbar Style -->
    <style name="ToolbarStyle">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">@dimen/elevation_toolbar</item>
    </style>

    <!-- Card Style -->

    <!-- Button Style -->
    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Text Styles -->
    <style name="TextTitle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextSubtitle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextLabel">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>



</resources>